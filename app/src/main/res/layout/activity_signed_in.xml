<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.byu.login.SignedInActivity">

    <TextView android:text="When the box turns green, press it as fast as you can!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greet"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:background="#3498db"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:text="Tap to begin"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="40dp"
        android:id="@+id/box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:id="@+id/scores"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/box"
        android:layout_alignStart="@+id/box"
        android:gravity="center"
        android:layout_alignEnd="@+id/box" />

    <!--<Button-->
