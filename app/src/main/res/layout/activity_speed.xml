<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.byu.reaction.SpeedActivity">

    <TextView android:text="Hello!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greet"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_marginTop="20dp"
        android:background="#3498db"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:text="Tap to begin"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="40dp"
        android:layout_below="@+id/greet"
        android:id="@+id/box"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recent Scores"
        android:id="@+id/leaderboard"
        android:layout_below="@+id/box"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Scores"
        android:id="@+id/scores"
        android:gravity="center"
        android:layout_below="@+id/leaderboard"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/box"
        android:layout_toStartOf="@+id/greet"
        android:layout_alignEnd="@+id/box" />

